@{
}

@model List<PastInternShipViews>

<head>
    <link rel="stylesheet" href="~/css/StudentPast.css" asp-append-version="true" />
</head>

<h4 style="text-align:center;font-weight:600;font-size:30px;text-decoration:underline;padding:10px;">GEÇMİŞ STAJLAR</h4>


<div class="containerTotal">

    <div class="containerUp">
        <div class="item-th">Staj Başlangıç</div>
        <div class="item-th">Staj Bitiş</div>
        <div class="item-th">Staj Türü</div>
        <div class="item-th">Dönem</div>
    </div>

    <div class="containerTable" style="overflow-x:auto;">
        <table>
            @foreach (var past in Model)
            {
                <tr>
                    <td>@past.IntershipStartDate.ToString("dd.MM.yyyy")</td>
                    <td>@past.IntershipEndDate.ToString("dd.MM.yyyy")</td>
                    <td>@past.TypeOfInternship</td>
                    <td>@past.Type</td>
                </tr>
            }
        </table>
    </div>
</div>