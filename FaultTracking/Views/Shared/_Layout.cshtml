                                    <i class="fa-solid fa-plus" style="color: #666666;"></i>Öğrenci Güncelle
                                </a>
                            </li>

                        </ul>
                    }

                    @if (userRoles.Contains("Görevli"))
                    {
                        <p id="user-name">
                            @username <br />@surname
                        </p>
                        <p id="unvan">Personel</p>
                        <hr style="width: 90%;margin: auto;background-color: black;">
                        <ul>

