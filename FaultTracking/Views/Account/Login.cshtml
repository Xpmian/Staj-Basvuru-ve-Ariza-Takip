@{
    Layout = null;
}

@model FaultTracking.Models.LoginModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Agdasima:wght@700&family=Archivo+Black&family=Belanosima&family=Caprasimo&family=Concert+One&family=Josefin+Sans:wght@500&family=Lugrasimo&family=Merriweather&family=Open+Sans:wght@300&family=Pacifico&family=Roboto+Slab&family=Rubik:wght@300;500;600&family=Satisfy&family=Titillium+Web:ital@0;1&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("~/img/Logo.png")" type="image/x-icon" />
</head>
<body>
    <div class="containerBreakdown">
        <div class="login-container">
            <div class="row">
                <div class="col-12">
                    <div class="logo">
                        <img src="@Url.Content("~/img/Logo.png")" alt="logo" width="30%">
                    </div>
                    <h1>
                        ARIZA TAKİP <br /> SİSTEMİ
                    </h1>
                    <div class="form-wrapper">
                        <form asp-controller="Account" asp-action="Login" method="post">
                            <div class="form-block">
                                <label asp-for="Username">Kullanıcı Adı:</label>
                                <input type="text" class="input" asp-for="Username">
                                
                            </div>
                            <div class="form-block">
                                <label asp-for="Password">Parola:</label>
                                <input asp-for="Password" type="password" class="input">
                                

                            </div>
                            
                            <div class="form-forget-wrapper">
                                <a href="https://ubys.ibu.edu.tr/account/forgotpassword" class="forget-password">
                                    Şifremi unuttum!
                                </a>
                            </div>
                            <div class="form-submit-wrapper">
                                <div class="g-recaptcha" data-sitekey="6LfTrOcpAAAAACVFoZRv1me4HBsKEEpV07dwJEZO"></div>
                                <button type="submit" class="btn btn-primary btnLogin" onclick="validatePasswords(event)">GİRİŞ</button>
                            </div>
                            @if (!string.IsNullOrEmpty(ViewData.ModelState[string.Empty]?.Errors?.FirstOrDefault()?.ErrorMessage))
                            {
                                <div class="alert alert-danger">
                                    @ViewData.ModelState[string.Empty].Errors.FirstOrDefault().ErrorMessage
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/dist/toastr.min.js" asp-append-version="true"></script>
    <link href="~/dist/toastr.min.css" rel="stylesheet" asp-append-version="true" />
    @if (TempData["Status"] != null && TempData["Message"] != null)
    {
        <script type="text/javascript">
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-bottom-left",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            var status = '@TempData["Status"]';
            var message = '@TempData["Message"]';

            // Duruma göre toastr mesajı göster
            if (status === "warning") {
                toastr.warning(message);
            } else if (status === "error") {
                toastr.error(message);
            } else if (status === "success") {
                toastr.success(message);
            }



        </script>

    }
</body>
</html>